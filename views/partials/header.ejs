<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="./styles/header.css">
    <link rel="stylesheet" href="./styles/style.css">
    <title>goBLOGS</title>
</head>

<body>
    <div class="navbar">
        <div class="menu-bar">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <h3><a href="/">goBLOGS</a></h3>
        <div class="navbar-links">
            <li><a href="/" class="homePageA">Home</a></li>
            <li><a href="/edit" class="editPageA">Edit Posts</a></li>
            <li><a href="/delete" class="delPageA">Delete Posts</a></li>
        </div>

        <div class="profile-and-search">
            <input type="text" placeholder="Search" class="searchBar" id="search-normal">
            <div class="profilePict"></div>
            <div class="profile-menu hidden">
                <div class="your-profile"><a href="#">Your Profile</a></div>
                <div class="settings"><a href="#">Settings</a></div>
                <hr>
                <div class="logout"><a href="#">Logout</a></div>
            </div>
        </div>

    </div>

    <div class="menu-hamburger" id="menu-ham-overlay">
        <input type="text" placeholder="Search" class="searchBar" id="search-hamb">
        <li><a href="/" class="homePageA">Home</a></li>
        <li><a href="/edit" class="editPageA">Edit Posts</a></li>
        <li><a href="/delete" class="delPageA">Delete Posts</a></li>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script>
        document.querySelector(".menu-bar").addEventListener("click", async function () {
            const menuHamb = document.getElementById("menu-ham-overlay");
            const body = document.querySelector("body");
            menuHamb.classList.toggle("visible");
            // document.getElementById("search-hamb").classList.toggle('show');
            body.classList.toggle("menu-hamburger-visible-body")
        });

        document.querySelector(".profilePict").addEventListener('click', function () {
            document.querySelector(".profile-menu").classList.toggle('hidden');
        })

        document.addEventListener('click', function (event) {
            const clickedElement = event.target;

            if (!clickedElement.closest('.profile-menu') && !clickedElement.closest('.profilePict')) {
                document.querySelector(".profile-menu").classList.add('hidden');
            }
        });
    </script>

    <script src="../index.js"></script>

</body>

</html>